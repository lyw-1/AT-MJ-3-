/* Clarity Design Aone 基础组件库样式系统 */

/* 色彩系统 - Clarity Design规范 */
:root {
  /* 主色 - 替换为绿色调 */
  --color-primary: #74CA00;
  --color-primary-light: rgba(116, 202, 0, 0.1);
  --color-primary-dark: #5A9900;
  
  /* 辅助色 */
  --color-success: #10B981;
  --color-warning: #F59E0B;
  --color-error: #EF4444;
  --color-info: #6B7280;
  
  /* 中性色 */
  --color-white: #FFFFFF;
  --color-gray-50: #F9FAFB;
  --color-gray-100: #F3F4F6;
  --color-gray-200: #E5E7EB;
  --color-gray-300: #D1D5DB;
  --color-gray-400: #9CA3AF;
  --color-gray-500: #6B7280;
  --color-gray-600: #4B5563;
  --color-gray-700: #374151;
  --color-gray-800: #1F2937;
  --color-gray-900: #111827;
  
  /* 背景色 - 改为白色 */
  --bg-page: #FFFFFF;
  --bg-card: #FFFFFF;
  
  /* 间距 - Clarity Design规范 */
  --space-1: 8rpx;
  --space-2: 16rpx;
  --space-3: 24rpx;
  --space-4: 32rpx;
  --space-5: 40rpx;
  --space-6: 48rpx;
  
  /* 圆角 - Clarity Design规范 */
  --radius-sm: 4rpx;
  --radius-md: 8rpx;
  --radius-lg: 12rpx;
  --radius-xl: 16rpx;
  --radius-2xl: 20rpx;
  --radius-full: 9999rpx;
  
  /* 字体大小 - Clarity Design规范 */
  --font-size-xs: 24rpx;
  --font-size-sm: 28rpx;
  --font-size-base: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  --font-size-2xl: 40rpx;
  
  /* 字重 - Clarity Design规范 */
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  
  /* 行高 - Clarity Design规范 */
  --line-height-xs: 1.4;
  --line-height-sm: 1.5;
  --line-height-base: 1.5;
  --line-height-lg: 1.6;
  --line-height-xl: 1.6;
  
  /* 阴影 - Clarity Design规范 */
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  
  /* 过渡 - Clarity Design规范 */
  --transition-fast: 0.15s ease;
  --transition-normal: 0.2s ease;
  --transition-slow: 0.3s ease;
  
  /* 字体家族 - Clarity Design规范 */
  --font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

/* 全局样式重置 */
page, view, text, image, button, input, textarea, switch, slider, radio, checkbox {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

page {
  background-color: var(--color-white);
  font-family: var(--font-family);
  font-size: var(--font-size-base);
  color: var(--color-gray-800);
}

/* 容器 */
.container {
  padding: var(--space-4);
}

/* 卡片 - Clarity Design规范 */
.card {
  background-color: var(--color-white);
  border-radius: var(--radius-2xl);
  padding: var(--space-3);
  margin-bottom: var(--space-3);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid var(--color-gray-200);
  transition: all 0.2s ease;
}

.card:hover {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-1rpx);
}

/* 标题 - Clarity Design规范 */
h1 {
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-semibold);
  color: var(--color-gray-900);
  margin-bottom: var(--space-3);
  line-height: 1.2;
}

h2 {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--color-gray-800);
  margin-bottom: var(--space-2);
  line-height: 1.3;
}

h3 {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-medium);
  color: var(--color-gray-700);
  margin-bottom: var(--space-1);
  line-height: 1.4;
}

/* 正文 - Clarity Design规范 */
p, .text {
  font-size: var(--font-size-base);
  color: var(--color-gray-600);
  line-height: 1.6;
  margin-bottom: var(--space-2);
}

/* 辅助文本 - Clarity Design规范 */
.text-secondary {
  font-size: var(--font-size-sm);
  color: var(--color-gray-500);
  line-height: 1.5;
}

.text-tertiary {
  font-size: var(--font-size-xs);
  color: var(--color-gray-400);
  line-height: 1.4;
}

/* 文本颜色 - Clarity Design规范 */
.text-primary {
  color: var(--color-primary);
}

.text-success {
  color: var(--color-success);
}

.text-warning {
  color: var(--color-warning);
}

.text-error {
  color: var(--color-error);
}

.text-info {
  color: var(--color-info);
}

.text-sm {
  font-size: var(--font-size-sm);
}

.text-xs {
  font-size: var(--font-size-xs);
}

/* 按钮基础样式 - Clarity Design规范 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  border-radius: var(--radius-lg);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-medium);
  text-align: center;
  cursor: pointer;
  transition: all 0.2s ease;
  border: 1rpx solid transparent;
  outline: none;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
  font-family: var(--font-family);
}

/* 主按钮 - Clarity Design规范 */
.btn-primary {
  background-color: var(--color-primary);
  color: white;
  border-color: var(--color-primary);
}

.btn-primary:active {
  background-color: var(--color-primary-dark);
  border-color: var(--color-primary-dark);
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 次要按钮 - Clarity Design规范 */
.btn-secondary {
  background-color: var(--color-white);
  color: var(--color-gray-700);
  border-color: var(--color-gray-300);
}

.btn-secondary:active {
  background-color: var(--color-gray-50);
  border-color: var(--color-gray-400);
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 成功按钮 - Clarity Design规范 */
.btn-success {
  background-color: var(--color-success);
  color: white;
  border-color: var(--color-success);
}

.btn-success:active {
  background-color: #059669;
  border-color: #059669;
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 警告按钮 - Clarity Design规范 */
.btn-warning {
  background-color: var(--color-warning);
  color: white;
  border-color: var(--color-warning);
}

.btn-warning:active {
  background-color: #D97706;
  border-color: #D97706;
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 错误按钮 - Clarity Design规范 */
.btn-error {
  background-color: var(--color-error);
  color: white;
  border-color: var(--color-error);
}

.btn-error:active {
  background-color: #DC2626;
  border-color: #DC2626;
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 文本按钮 - Clarity Design规范 */
.btn-text {
  background-color: transparent;
  color: var(--color-primary);
  border-color: transparent;
  box-shadow: none;
}

.btn-text:active {
  background-color: var(--color-primary-light);
  transform: translateY(1rpx);
}

/* 输入框样式 - Clarity Design规范 */
.input {
  width: 100%;
  padding: 16rpx 24rpx;
  border: 1rpx solid var(--color-gray-300);
  border-radius: var(--radius-md);
  font-size: var(--font-size-base);
  color: var(--color-gray-800);
  background-color: var(--color-white);
  transition: all 0.2s ease;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.03);
  font-family: var(--font-family);
}

.input:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3rpx var(--color-primary-light);
}

.input::placeholder {
  color: var(--color-gray-400);
}

.input:disabled {
  background-color: var(--color-gray-50);
  color: var(--color-gray-400);
  border-color: var(--color-gray-200);
}

/* 输入框组 - Clarity Design规范 */
.input-group {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  background-color: var(--color-white);
  border: 1rpx solid var(--color-gray-300);
  border-radius: var(--radius-md);
  padding: 0 var(--space-2);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.03);
  transition: all 0.2s ease;
}

.input-group:focus-within {
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3rpx var(--color-primary-light);
}

.input-group .input {
  border: none;
  box-shadow: none;
  padding: 16rpx 0;
}

.input-group .input:focus {
  box-shadow: none;
}

/* 表格样式 - Clarity Design规范 */
.table {
  width: 100%;
  background-color: var(--color-white);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid var(--color-gray-200);
}

.table-header {
  background-color: var(--color-white);
  font-weight: var(--font-weight-semibold);
  color: var(--color-gray-700);
  border-bottom: 1rpx solid var(--color-gray-200);
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid var(--color-gray-100);
  transition: background-color 0.1s ease;
}

.table-row:hover {
  background-color: var(--color-gray-50);
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  flex: 1;
  padding: 16rpx 24rpx;
  font-size: var(--font-size-base);
  color: var(--color-gray-800);
  text-align: left;
  line-height: 1.5;
}

.table-header .table-cell {
  font-weight: var(--font-weight-semibold);
  color: var(--color-gray-900);
}

/* 响应式表格 */
@media (max-width: 768rpx) {
  .table-cell {
    padding: 12rpx 16rpx;
    font-size: var(--font-size-sm);
  }
}

/* 标签样式 - Clarity Design规范 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 14rpx;
  border-radius: var(--radius-lg);
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-medium);
  line-height: 1.4;
  border: 1rpx solid transparent;
}

.tag-primary {
  background-color: var(--color-primary-light);
  color: var(--color-primary);
  border-color: rgba(59, 130, 246, 0.2);
}

.tag-success {
  background-color: rgba(16, 185, 129, 0.1);
  color: var(--color-success);
  border-color: rgba(16, 185, 129, 0.2);
}

.tag-warning {
  background-color: rgba(245, 158, 11, 0.1);
  color: var(--color-warning);
  border-color: rgba(245, 158, 11, 0.2);
}

.tag-error {
  background-color: rgba(239, 68, 68, 0.1);
  color: var(--color-error);
  border-color: rgba(239, 68, 68, 0.2);
}

.tag-info {
  background-color: rgba(107, 114, 128, 0.1);
  color: var(--color-info);
  border-color: rgba(107, 114, 128, 0.2);
}

/* 加载动画 - Clarity Design规范 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-6);
}

.loading::after {
  content: '';
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--color-gray-200);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}