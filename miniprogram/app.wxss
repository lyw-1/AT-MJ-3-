/* WEI风格样式系统 */

/* 主色调 */
:root {
  --primary-color: #6150BF;
  --primary-light: #EEF2FF;
  --primary-dark: #4F46E5;
  
  /* 辅助色 */
  --success-color: #10B981;
  --warning-color: #F59E0B;
  --error-color: #EF4444;
  --info-color: #6B7280;
  
  /* 中性色 */
  --white: #FFFFFF;
  --gray-50: #F9FAFB;
  --gray-100: #F3F4F6;
  --gray-200: #E5E7EB;
  --gray-300: #D1D5DB;
  --gray-400: #9CA3AF;
  --gray-500: #6B7280;
  --gray-600: #4B5563;
  --gray-700: #374151;
  --gray-800: #1F2937;
  --gray-900: #111827;
  
  /* 间距 */
  --spacing-1: 8rpx;
  --spacing-2: 16rpx;
  --spacing-3: 24rpx;
  --spacing-4: 32rpx;
  --spacing-5: 40rpx;
  --spacing-6: 48rpx;
  
  /* 圆角 */
  --border-radius-sm: 12rpx;
  --border-radius-md: 16rpx;
  --border-radius-lg: 20rpx;
  --border-radius-xl: 24rpx;
  --border-radius-2xl: 28rpx;
  
  /* 字体大小 */
  --font-size-xs: 24rpx;
  --font-size-sm: 28rpx;
  --font-size-base: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  --font-size-2xl: 40rpx;
  
  /* 字体权重 */
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
}

/* 全局样式重置 */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

page {
  background-color: #F9F9FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: var(--font-size-base);
  color: var(--gray-800);
}

/* 容器 */
.container {
  padding: var(--spacing-4);
}

/* 卡片 */
.card {
  background-color: var(--white);
  border-radius: var(--border-radius-2xl);
  padding: var(--spacing-4);
  margin-bottom: var(--spacing-4);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 标题 */
h1 {
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-semibold);
  color: var(--gray-800);
  margin-bottom: var(--spacing-3);
}

h2 {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--gray-800);
  margin-bottom: var(--spacing-2);
}

h3 {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-medium);
  color: var(--gray-700);
  margin-bottom: var(--spacing-1);
}

/* 文本 */
.text-primary {
  color: var(--primary-color);
}

.text-success {
  color: var(--success-color);
}

.text-warning {
  color: var(--warning-color);
}

.text-error {
  color: var(--error-color);
}

.text-info {
  color: var(--info-color);
}

.text-sm {
  font-size: var(--font-size-sm);
}

.text-xs {
  font-size: var(--font-size-xs);
}

/* 按钮基础样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 48rpx;
  border-radius: var(--border-radius-xl);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-medium);
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
  outline: none;
}

/* 主按钮 */
.btn-primary {
  background-color: var(--primary-color);
  color: white;
}

.btn-primary:active {
  background-color: var(--primary-dark);
  transform: scale(0.98);
}

/* 次要按钮 */
.btn-secondary {
  background-color: var(--gray-100);
  color: var(--gray-700);
}

.btn-secondary:active {
  background-color: var(--gray-200);
  transform: scale(0.98);
}

/* 成功按钮 */
.btn-success {
  background-color: var(--success-color);
  color: white;
}

.btn-success:active {
  background-color: #059669;
  transform: scale(0.98);
}

/* 警告按钮 */
.btn-warning {
  background-color: var(--warning-color);
  color: white;
}

.btn-warning:active {
  background-color: #D97706;
  transform: scale(0.98);
}

/* 错误按钮 */
.btn-error {
  background-color: var(--error-color);
  color: white;
}

.btn-error:active {
  background-color: #DC2626;
  transform: scale(0.98);
}

/* 输入框样式 */
.input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid var(--gray-200);
  border-radius: var(--border-radius-lg);
  font-size: var(--font-size-base);
  color: var(--gray-800);
  background-color: var(--white);
  transition: all 0.3s ease;
}

.input:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx var(--primary-light);
}

.input::placeholder {
  color: var(--gray-400);
}

/* 表格样式 */
.table {
  width: 100%;
  background-color: var(--white);
  border-radius: var(--border-radius-2xl);
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.table-header {
  background-color: var(--gray-50);
  font-weight: var(--font-weight-semibold);
  color: var(--gray-700);
}

.table-row {
  display: flex;
  border-bottom: 2rpx solid var(--gray-100);
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  flex: 1;
  padding: 24rpx;
  font-size: var(--font-size-base);
  color: var(--gray-800);
  text-align: center;
}

.table-header .table-cell {
  font-weight: var(--font-weight-semibold);
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: var(--border-radius-sm);
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-medium);
}

.tag-primary {
  background-color: var(--primary-light);
  color: var(--primary-color);
}

.tag-success {
  background-color: #D1FAE5;
  color: var(--success-color);
}

.tag-warning {
  background-color: #FEF3C7;
  color: var(--warning-color);
}

.tag-error {
  background-color: #FEE2E2;
  color: var(--error-color);
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-6);
}

.loading::after {
  content: '';
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--gray-200);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}