/* 页面基础样式 */
.page {
  background-color: var(--bg-page);
  width: 100%;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 固定顶部容器 - 优化高度 */
.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: var(--bg-card);
  z-index: var(--z-fixed);
  box-shadow: var(--shadow-sm);
  padding-bottom: var(--space-2);
}

/* 搜索栏 - 使用新色彩系统 */
.search-bar {
  display: flex;
  align-items: center;
  height: 72rpx;
  margin: var(--space-3) var(--space-4) var(--space-2) var(--space-4);
  padding: 0 var(--space-3);
  background-color: var(--bg-secondary);
  border: 1rpx solid var(--border-default);
  border-radius: var(--radius-full);
  transition: all var(--transition-normal);
}

.search-bar:focus-within {
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3rpx var(--color-primary-light);
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: var(--space-2);
  opacity: 0.6;
}

.search-text {
  font-size: var(--font-size-base);
  color: var(--text-tertiary);
}

/* 快捷操作区域 - 优化高度 */
.quick-actions-section {
  padding: 0 var(--space-4) var(--space-2) var(--space-4);
  background-color: var(--bg-page);
}

.quick-actions-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-2);
}

.quick-actions-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.quick-actions-manage {
  font-size: var(--font-size-sm);
  color: var(--color-primary);
  font-weight: var(--font-weight-medium);
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-md);
  transition: all var(--transition-normal);
}

.quick-actions-manage:active {
  background-color: var(--color-primary-light);
}

.quick-actions-scroll {
  width: 100%;
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
}

.quick-actions {
  display: flex;
  padding: var(--space-2);
  background-color: var(--bg-secondary);
  border-radius: var(--radius-xl);
  white-space: nowrap;
}

.action-item {
  flex: 0 0 auto;
  width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: var(--space-2);
  transition: all var(--transition-normal);
}

.action-item:last-child {
  margin-right: 0;
}

.action-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: var(--radius-lg);
  margin-bottom: var(--space-2);
  transition: all var(--transition-normal);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-3);
  box-shadow: var(--shadow-sm);
}

.action-icon image {
  width: 48rpx;
  height: 48rpx;
  filter: brightness(0) invert(1);
}

.action-item:active .action-icon {
  transform: scale(0.92);
  box-shadow: var(--shadow-xs);
}

.action-text {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
  text-align: center;
  line-height: var(--line-height-tight);
  white-space: normal;
  word-break: break-word;
}

/* 页面内容 - 优化顶部边距 */
.page-content {
  margin-top: 240rpx;
  position: relative;
  z-index: 1;
}

/* 统计卡片 - 使用新色彩系统和响应式布局 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-template-rows: auto auto;
  gap: var(--space-3);
  padding: 0 var(--space-4) var(--space-3) var(--space-4);
}

@media (min-width: 600rpx) {
  .stats-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

.stat-card {
  padding: var(--space-4);
  border-radius: var(--radius-2xl);
  text-align: center;
  box-shadow: var(--shadow-md);
  transition: all var(--transition-normal);
  position: relative;
  overflow: hidden;
  border: 1rpx solid var(--border-light);
}

.stat-card:active {
  transform: scale(0.97);
  box-shadow: var(--shadow-sm);
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0));
}

.stat-value {
  font-size: var(--font-size-3xl);
  font-weight: var(--font-weight-bold);
  color: var(--color-white);
  margin-bottom: var(--space-2);
  text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
  position: relative;
  z-index: 1;
}

.stat-label {
  font-size: var(--font-size-sm);
  color: rgba(255, 255, 255, 0.95);
  position: relative;
  z-index: 1;
}

/* 功能模块通用样式 - 使用新色彩系统 */
.function-module {
  background-color: var(--bg-card);
  margin: var(--space-3) var(--space-4);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
  border: 1rpx solid var(--border-light);
  transition: all var(--transition-normal);
}

.function-module:active {
  transform: scale(0.99);
}

.module-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-3) var(--space-4);
  border-bottom: 1rpx solid var(--border-light);
}

.module-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.module-more {
  font-size: var(--font-size-sm);
  color: var(--color-primary);
  font-weight: var(--font-weight-medium);
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-md);
  transition: all var(--transition-normal);
}

.module-more:active {
  background-color: var(--color-primary-light);
}

.module-content {
  padding: var(--space-3) var(--space-4);
}

/* 数据项样式 - 使用新色彩系统 */
.data-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-3) 0;
  border-bottom: 1rpx solid var(--border-light);
  transition: background-color var(--transition-fast);
}

.data-item:active {
  background-color: var(--bg-secondary);
}

.data-item:last-child {
  border-bottom: none;
}

.data-item-left {
  display: flex;
  flex-direction: column;
}

.data-item-name {
  font-size: var(--font-size-base);
  color: var(--text-primary);
  margin-bottom: var(--space-1);
}

.data-item-operator {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.data-item-time {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

/* 任务项样式 - 使用新色彩系统 */
.task-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-3) 0;
  border-bottom: 1rpx solid var(--border-light);
  transition: background-color var(--transition-fast);
}

.task-item:active {
  background-color: var(--bg-secondary);
}

.task-item:last-child {
  border-bottom: none;
}

.task-item-left {
  display: flex;
  align-items: center;
}

.task-item-name {
  font-size: var(--font-size-base);
  color: var(--text-primary);
  margin-right: var(--space-3);
}

.task-item-status {
  font-size: var(--font-size-xs);
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-lg);
  font-weight: var(--font-weight-medium);
}

.task-item-status.status-processing {
  background-color: var(--status-processing-light);
  color: var(--status-processing);
}

.task-item-status.status-pending {
  background-color: var(--status-pending-light);
  color: var(--status-pending);
}

.task-item-status.status-completed {
  background-color: var(--status-completed-light);
  color: var(--status-completed);
}

.task-item-date {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

/* 自定义显示功能模态框 - 使用新色彩系统 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: var(--z-modal-backdrop);
  animation: fade-in 0.2s var(--ease-out);
}

@keyframes fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: var(--bg-card);
  border-top-left-radius: var(--radius-2xl);
  border-top-right-radius: var(--radius-2xl);
  z-index: var(--z-modal);
  padding: var(--space-4);
  max-height: 70vh;
  overflow-y: auto;
  animation: slide-up 0.3s var(--ease-out);
  box-shadow: var(--shadow-xl);
}

@keyframes slide-up {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-4);
  padding-bottom: var(--space-3);
  border-bottom: 1rpx solid var(--border-light);
}

.modal-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
}

.modal-close {
  font-size: 48rpx;
  color: var(--text-tertiary);
  width: 48rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  transition: all var(--transition-normal);
  border-radius: var(--radius-full);
}

.modal-close:active {
  background-color: var(--bg-secondary);
  color: var(--text-primary);
}

.modal-body {
  padding: 0 var(--space-2);
}

.modal-tabs {
  display: flex;
  justify-content: center;
  margin-bottom: var(--space-4);
  border-bottom: 1rpx solid var(--border-light);
}

.modal-tab {
  font-size: var(--font-size-base);
  color: var(--text-secondary);
  padding: var(--space-3) var(--space-5);
  position: relative;
  transition: all var(--transition-normal);
  font-weight: var(--font-weight-medium);
}

.modal-tab.active {
  color: var(--color-primary);
  font-weight: var(--font-weight-semibold);
}

.modal-tab.active::after {
  content: '';
  position: absolute;
  bottom: -1rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60%;
  height: 3rpx;
  background-color: var(--color-primary);
  border-radius: var(--radius-sm);
}

.action-manage-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-4) 0;
  border-bottom: 1rpx solid var(--border-light);
  transition: background-color var(--transition-fast);
}

.action-manage-item:active {
  background-color: var(--bg-secondary);
}

.action-manage-info {
  display: flex;
  align-items: center;
}

.action-manage-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: var(--radius-md);
  margin-right: var(--space-3);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-2);
  box-shadow: var(--shadow-sm);
}

.action-manage-icon image {
  width: 40rpx;
  height: 40rpx;
  filter: brightness(0) invert(1);
}

.action-manage-name {
  font-size: var(--font-size-base);
  color: var(--text-primary);
}

.action-manage-switch {
  width: 80rpx;
  height: 44rpx;
  background-color: var(--border-default);
  border-radius: var(--radius-full);
  position: relative;
  transition: all var(--transition-normal);
}

.action-manage-switch.active {
  background-color: var(--color-primary);
}

.switch-button {
  width: 36rpx;
  height: 36rpx;
  background-color: var(--color-white);
  border-radius: 50%;
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  transition: all var(--transition-normal);
  box-shadow: var(--shadow-xs);
}

.action-manage-switch.active .switch-button {
  transform: translateX(36rpx);
}

.action-sort-list {
  padding: 0 var(--space-2);
}

.action-sort-item {
  display: flex;
  align-items: center;
  padding: var(--space-4) 0;
  border-bottom: 1rpx solid var(--border-light);
  transition: all var(--transition-normal);
  background-color: var(--bg-card);
  position: relative;
}

.action-sort-item:active {
  background-color: var(--bg-secondary);
}

.action-sort-item:last-child {
  border-bottom: none;
}

.sort-handle {
  font-size: 36rpx;
  color: var(--text-tertiary);
  margin-right: var(--space-3);
  padding: var(--space-2);
  cursor: move;
}

.sort-indicator {
  margin-left: auto;
  font-size: var(--font-size-xs);
  color: var(--color-primary);
  padding: var(--space-1) var(--space-2);
  background-color: var(--status-processing-light);
  border-radius: var(--radius-lg);
}

.sort-tip {
  text-align: center;
  padding: var(--space-3);
  font-size: var(--font-size-xs);
  color: var(--text-tertiary);
  background-color: var(--bg-secondary);
  border-radius: var(--radius-lg);
  margin-top: var(--space-3);
}
