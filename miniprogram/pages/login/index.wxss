/* 登录页面样式 */

/* 全局样式重置 */
page {
  background-color: #FFFFFF;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-family: 'Noto Sans SC', sans-serif;
}

/* 主色调定义 */
:root {
  --primary-color: #74CA00;
  --text-primary: #232227;
  --text-secondary: #989AAC;
  --shadow-color: rgba(116, 202, 0, 0.30196078431372547);
}

/* 登录容器 */
.login-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  position: relative;
  background-color: #FFFFFF;
}

/* 顶部状态栏 */
.status-bar {
  width: 100%;
  height: 176rpx;
  position: relative;
}

.status-bar-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

/* 主内容区域 */
.main-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 32rpx;
  box-sizing: border-box;
  flex: 1;
  z-index: 2;
}

/* Logo区域 */
.logo-section {
  margin-top: 120rpx;
  margin-bottom: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo-image {
  width: 146rpx;
  height: 146rpx;
}

/* 欢迎信息区域 */
.welcome-section {
  margin-bottom: 80rpx;
  text-align: center;
  width: 100%;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-primary);
  line-height: 56rpx;
  display: block;
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  font-size: 32rpx;
  color: var(--text-secondary);
  line-height: 48rpx;
  display: block;
  font-weight: 500;
}

/* 输入框区域 */
.input-section {
  width: 100%;
  max-width: 622rpx;
  margin-bottom: 64rpx;
}

/* 输入组样式 */
.input-group {
  margin-bottom: 90rpx;
  width: 100%;
  height: 162rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-primary);
  line-height: 40rpx;
  margin-bottom: 16rpx;
  display: block;
}

.input-wrapper {
  position: relative;
  width: 100%;
  height: 96rpx;
  overflow: hidden;
}

.input-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.input-field {
  width: 100%;
  height: 96rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  padding: 0 32rpx;
  border: none;
  box-sizing: border-box;
  background-color: #FFFFFF;
  transition: all 0.3s ease;
  position: relative;
  z-index: 2;
}

.input-field:focus {
  outline: none;
}

/* 登录按钮 */
.login-button {
  width: 100%;
  max-width: 622rpx;
  height: 112rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  background-color: var(--primary-color);
  border: none;
  border-radius: 14rpx;
  margin-bottom: 40rpx;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx var(--shadow-color), 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx var(--shadow-color), 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.login-button:disabled {
  background-color: #B3D97A;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.button-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.button-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 底部区域 */
.bottom-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 32rpx 60rpx;
  box-sizing: border-box;
  z-index: 2;
}

/* 第三方登录区域 */
.third-party-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.third-party-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 40rpx;
  margin-bottom: 40rpx;
  font-weight: 400;
}

.wechat-login-btn {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: transparent;
  border: none;
  padding: 0;
  margin: 0;
}

.wechat-login-btn:active {
  transform: scale(0.95);
}

.wechat-icon {
  width: 64rpx;
  height: 64rpx;
}

/* 底部装饰线 */
.bottom-decoration {
  width: 644rpx;
  height: 2rpx;
  margin-top: 40rpx;
}

