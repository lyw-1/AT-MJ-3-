/* 任务详情页样式 */

/* 任务头部 */
.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-3);
}

.task-title-section {
  flex: 1;
  margin-right: var(--spacing-3);
}

.task-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--gray-800);
  margin-bottom: var(--spacing-2);
  display: block;
}

.task-actions {
  display: flex;
  gap: var(--spacing-2);
}

.task-info {
  margin-bottom: var(--spacing-3);
}

.task-desc {
  font-size: var(--font-size-base);
  color: var(--gray-600);
  line-height: 1.5;
}

/* 任务元数据 */
.task-meta {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-3);
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-label {
  font-size: var(--font-size-sm);
  color: var(--gray-600);
  margin-right: var(--spacing-1);
}

.meta-value {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--gray-800);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-3);
}

/* 进度条 */
.progress-section {
  margin-bottom: var(--spacing-4);
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background-color: var(--gray-200);
  border-radius: var(--border-radius-sm);
  overflow: hidden;
  margin-bottom: var(--spacing-2);
}

.progress {
  height: 100%;
  background-color: var(--primary-color);
  border-radius: var(--border-radius-sm);
  transition: width 0.3s ease;
}

.progress-text {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--primary-color);
  text-align: right;
}

/* 进度步骤 */
.progress-steps {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-3);
}

.progress-step {
  display: flex;
  align-items: flex-start;
  gap: var(--spacing-3);
  padding: var(--spacing-3);
  background-color: var(--gray-50);
  border-radius: var(--border-radius-lg);
  transition: all 0.3s ease;
}

.progress-step.completed {
  background-color: #D1FAE5;
}

.step-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: var(--gray-300);
  color: var(--white);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-semibold);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.progress-step.completed .step-icon {
  background-color: var(--success-color);
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-medium);
  color: var(--gray-800);
  display: block;
  margin-bottom: var(--spacing-1);
}

.step-desc {
  font-size: var(--font-size-sm);
  color: var(--gray-600);
  display: block;
}

/* 日志列表 */
.log-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-3);
}

.log-item {
  padding: var(--spacing-3);
  background-color: var(--gray-50);
  border-radius: var(--border-radius-lg);
}

.log-time {
  font-size: var(--font-size-xs);
  color: var(--gray-500);
  margin-bottom: var(--spacing-1);
  display: block;
}

.log-content {
  font-size: var(--font-size-base);
  color: var(--gray-800);
  margin-bottom: var(--spacing-1);
  display: block;
  line-height: 1.5;
}

.log-user {
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-medium);
  color: var(--primary-color);
  display: block;
  text-align: right;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: var(--spacing-6) 0;
  color: var(--gray-500);
  font-size: var(--font-size-sm);
}