/* 色彩系统 - 统一化规范 */
:root {
  /* 主色调系统 */
  --color-primary: #74CA00;
  --color-primary-light: rgba(116, 202, 0, 0.1);
  --color-primary-dark: #5A9900;
  --color-primary-lighter: rgba(116, 202, 0, 0.05);
  
  /* 状态色系统 - 统一规范 */
  --color-success: #10B981;
  --color-success-light: rgba(16, 185, 129, 0.1);
  --color-warning: #F59E0B;
  --color-warning-light: rgba(245, 158, 11, 0.1);
  --color-error: #EF4444;
  --color-error-light: rgba(239, 68, 68, 0.1);
  --color-info: #6B7280;
  --color-info-light: rgba(107, 114, 128, 0.1);
  
  /* 任务状态色 - 统一使用主色调 */
  --status-processing: #74CA00;
  --status-processing-light: rgba(116, 202, 0, 0.1);
  --status-pending: #FA8C16;
  --status-pending-light: rgba(250, 140, 22, 0.1);
  --status-completed: #10B981;
  --status-completed-light: rgba(16, 185, 129, 0.1);
  
  /* 中性色系统 - 9级灰度色阶 */
  --color-white: #FFFFFF;
  --color-gray-50: #F9FAFB;
  --color-gray-100: #F3F4F6;
  --color-gray-200: #E5E7EB;
  --color-gray-300: #D1D5DB;
  --color-gray-400: #9CA3AF;
  --color-gray-500: #6B7280;
  --color-gray-600: #4B5563;
  --color-gray-700: #374151;
  --color-gray-800: #1F2937;
  --color-gray-900: #111827;
  
  /* 文本色系统 */
  --text-primary: #1F2937;
  --text-secondary: #4B5563;
  --text-tertiary: #6B7280;
  --text-disabled: #9CA3AF;
  
  /* 边框色系统 */
  --border-primary: #74CA00;
  --border-default: #E5E7EB;
  --border-light: #F3F4F6;
  
  /* 背景色系统 */
  --bg-page: #FFFFFF;
  --bg-card: #FFFFFF;
  --bg-secondary: #F9FAFB;
  --bg-tertiary: #F3F4F6;
  
  /* 间距系统 - 统一规范 */
  --space-1: 8rpx;
  --space-2: 16rpx;
  --space-3: 24rpx;
  --space-4: 32rpx;
  --space-5: 40rpx;
  --space-6: 48rpx;
  
  /* 圆角系统 - 统一规范 */
  --radius-sm: 4rpx;
  --radius-md: 8rpx;
  --radius-lg: 12rpx;
  --radius-xl: 16rpx;
  --radius-2xl: 20rpx;
  --radius-full: 9999rpx;
  
  /* 字体大小系统 - 统一规范 */
  --font-size-xs: 24rpx;
  --font-size-sm: 26rpx;
  --font-size-base: 28rpx;
  --font-size-lg: 30rpx;
  --font-size-xl: 32rpx;
  --font-size-2xl: 36rpx;
  --font-size-3xl: 40rpx;
  
  /* 字重系统 - 统一规范 */
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  
  /* 行高系统 - 统一规范 */
  --line-height-tight: 1.2;
  --line-height-normal: 1.5;
  --line-height-relaxed: 1.6;
  
  /* 阴影系统 - 统一规范 */
  --shadow-xs: 0 1rpx 2rpx rgba(0, 0, 0, 0.04);
  --shadow-sm: 0 2rpx 4rpx rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4rpx 8rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 16rpx rgba(0, 0, 0, 0.12);
  --shadow-xl: 0 12rpx 24rpx rgba(0, 0, 0, 0.15);
  
  /* 过渡系统 - 统一规范 */
  --transition-fast: 0.15s ease;
  --transition-normal: 0.2s ease;
  --transition-slow: 0.3s ease;
  
  /* 缓动函数 - 优化动画 */
  --ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);
  --ease-out: cubic-bezier(0, 0, 0.2, 1);
  --ease-in: cubic-bezier(0.4, 0, 1, 1);
  
  /* 字体家族 - 统一规范 */
  --font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans SC', sans-serif;
  
  /* Z-index系统 - 统一规范 */
  --z-dropdown: 100;
  --z-sticky: 200;
  --z-fixed: 300;
  --z-modal-backdrop: 400;
  --z-modal: 500;
  --z-popover: 600;
  --z-tooltip: 700;
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  :root {
    --color-primary: #8CD622;
    --color-primary-light: rgba(140, 214, 34, 0.15);
    --color-primary-dark: #6CB01A;
    
    --color-success: #34D399;
    --color-success-light: rgba(52, 211, 153, 0.15);
    --color-warning: #FBBF24;
    --color-warning-light: rgba(251, 191, 36, 0.15);
    --color-error: #FC8181;
    --color-error-light: rgba(252, 129, 129, 0.15);
    
    --status-processing: #8CD622;
    --status-processing-light: rgba(140, 214, 34, 0.15);
    --status-pending: #FBBF24;
    --status-pending-light: rgba(251, 191, 36, 0.15);
    --status-completed: #34D399;
    --status-completed-light: rgba(52, 211, 153, 0.15);
    
    --text-primary: #F9FAFB;
    --text-secondary: #D1D5DB;
    --text-tertiary: #9CA3AF;
    --text-disabled: #6B7280;
    
    --border-primary: #8CD622;
    --border-default: #4B5563;
    --border-light: #374151;
    
    --bg-page: #111827;
    --bg-card: #1F2937;
    --bg-secondary: #374151;
    --bg-tertiary: #4B5563;
    
    --shadow-xs: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
    --shadow-sm: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4rpx 8rpx rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 8rpx 16rpx rgba(0, 0, 0, 0.5);
    --shadow-xl: 0 12rpx 24rpx rgba(0, 0, 0, 0.6);
  }
}

/* 全局样式重置 */
page, view, text, image, button, input, textarea, switch, slider, radio, checkbox {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

page {
  background-color: var(--bg-page);
  font-family: var(--font-family);
  font-size: var(--font-size-base);
  color: var(--text-primary);
  line-height: var(--line-height-normal);
}

/* 容器 */
.container {
  padding: var(--space-4);
}

/* 卡片组件 */
.card {
  background-color: var(--bg-card);
  border-radius: var(--radius-2xl);
  padding: var(--space-3);
  margin-bottom: var(--space-3);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-default);
  transition: all var(--transition-normal);
}

.card:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-1rpx);
}

.card:active {
  transform: scale(0.98);
}

/* 标题系统 */
h1 {
  font-size: var(--font-size-3xl);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: var(--space-3);
  line-height: var(--line-height-tight);
}

h2 {
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  margin-bottom: var(--space-2);
  line-height: var(--line-height-tight);
}

h3 {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
  margin-bottom: var(--space-2);
  line-height: var(--line-height-normal);
}

/* 文本系统 */
.text {
  font-size: var(--font-size-base);
  color: var(--text-secondary);
  line-height: var(--line-height-normal);
  margin-bottom: var(--space-2);
}

.text-secondary {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  line-height: var(--line-height-normal);
}

.text-tertiary {
  font-size: var(--font-size-xs);
  color: var(--text-disabled);
  line-height: var(--line-height-tight);
}

/* 文本颜色类 */
.text-primary {
  color: var(--color-primary);
}

.text-success {
  color: var(--color-success);
}

.text-warning {
  color: var(--color-warning);
}

.text-error {
  color: var(--color-error);
}

.text-info {
  color: var(--color-info);
}

/* 按钮基础样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-2) var(--space-4);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-medium);
  text-align: center;
  cursor: pointer;
  transition: all var(--transition-normal);
  border: 1rpx solid transparent;
  outline: none;
  box-shadow: var(--shadow-xs);
  font-family: var(--font-family);
  min-height: 88rpx;
  position: relative;
  overflow: hidden;
}

/* 按钮交互反馈 */
.btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.3s, height 0.3s;
}

.btn:active::after {
  width: 200rpx;
  height: 200rpx;
}

.btn:active {
  transform: scale(0.95);
}

/* 主按钮 */
.btn-primary {
  background-color: var(--color-primary);
  color: var(--color-white);
  border-color: var(--color-primary);
}

.btn-primary:active {
  background-color: var(--color-primary-dark);
  border-color: var(--color-primary-dark);
  box-shadow: var(--shadow-sm);
}

/* 次要按钮 */
.btn-secondary {
  background-color: var(--bg-card);
  color: var(--text-primary);
  border-color: var(--border-default);
}

.btn-secondary:active {
  background-color: var(--bg-secondary);
  border-color: var(--border-primary);
  box-shadow: var(--shadow-sm);
}

/* 成功按钮 */
.btn-success {
  background-color: var(--color-success);
  color: var(--color-white);
  border-color: var(--color-success);
}

.btn-success:active {
  background-color: #059669;
  border-color: #059669;
  box-shadow: var(--shadow-sm);
}

/* 警告按钮 */
.btn-warning {
  background-color: var(--color-warning);
  color: var(--color-white);
  border-color: var(--color-warning);
}

.btn-warning:active {
  background-color: #D97706;
  border-color: #D97706;
  box-shadow: var(--shadow-sm);
}

/* 错误按钮 */
.btn-error {
  background-color: var(--color-error);
  color: var(--color-white);
  border-color: var(--color-error);
}

.btn-error:active {
  background-color: #DC2626;
  border-color: #DC2626;
  box-shadow: var(--shadow-sm);
}

/* 文本按钮 */
.btn-text {
  background-color: transparent;
  color: var(--color-primary);
  border-color: transparent;
  box-shadow: none;
}

.btn-text:active {
  background-color: var(--color-primary-light);
  transform: translateY(1rpx);
}

/* 输入框样式 */
.input {
  width: 100%;
  padding: var(--space-2) var(--space-3);
  border: 1rpx solid var(--border-default);
  border-radius: var(--radius-md);
  font-size: var(--font-size-base);
  color: var(--text-primary);
  background-color: var(--bg-card);
  transition: all var(--transition-normal);
  box-shadow: var(--shadow-xs);
  font-family: var(--font-family);
  min-height: 88rpx;
}

.input:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3rpx var(--color-primary-light);
}

.input::placeholder {
  color: var(--text-disabled);
}

.input:disabled {
  background-color: var(--bg-secondary);
  color: var(--text-disabled);
  border-color: var(--border-light);
}

/* 标签样式 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: var(--space-1) var(--space-2);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-medium);
  line-height: var(--line-height-tight);
  border: 1rpx solid transparent;
}

.tag-primary {
  background-color: var(--color-primary-light);
  color: var(--color-primary);
  border-color: rgba(116, 202, 0, 0.2);
}

.tag-success {
  background-color: var(--color-success-light);
  color: var(--color-success);
  border-color: rgba(16, 185, 129, 0.2);
}

.tag-warning {
  background-color: var(--color-warning-light);
  color: var(--color-warning);
  border-color: rgba(245, 158, 11, 0.2);
}

.tag-error {
  background-color: var(--color-error-light);
  color: var(--color-error);
  border-color: rgba(239, 68, 68, 0.2);
}

.tag-info {
  background-color: var(--color-info-light);
  color: var(--color-info);
  border-color: rgba(107, 114, 128, 0.2);
}

/* 状态标签 */
.tag-processing {
  background-color: var(--status-processing-light);
  color: var(--status-processing);
  border-color: rgba(116, 202, 0, 0.2);
}

.tag-pending {
  background-color: var(--status-pending-light);
  color: var(--status-pending);
  border-color: rgba(250, 140, 22, 0.2);
}

.tag-completed {
  background-color: var(--status-completed-light);
  color: var(--status-completed);
  border-color: rgba(16, 185, 129, 0.2);
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-6);
}

.loading::after {
  content: '';
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--border-default);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 骨架屏 */
.skeleton {
  background: linear-gradient(90deg, var(--bg-secondary) 25%, var(--bg-tertiary) 50%, var(--bg-secondary) 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: var(--radius-md);
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-6) var(--space-4);
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: var(--space-3);
  opacity: 0.5;
}

.empty-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
  margin-bottom: var(--space-1);
}

.empty-desc {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  margin-bottom: var(--space-3);
}

/* Toast提示 */
.toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: var(--color-gray-900);
  color: var(--color-white);
  padding: var(--space-3) var(--space-4);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-base);
  z-index: var(--z-tooltip);
  box-shadow: var(--shadow-lg);
  animation: toast-in 0.3s var(--ease-out);
}

@keyframes toast-in {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

/* 响应式断点 */
@media (max-width: 375px) {
  :root {
    --space-4: 28rpx;
    --space-3: 20rpx;
  }
}

@media (min-width: 414px) {
  :root {
    --space-4: 36rpx;
    --space-3: 24rpx;
  }
}
