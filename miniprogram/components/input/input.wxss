/* 输入框组件样式 */
.input-wrapper {
  margin-bottom: var(--space-3);
}

.input-label {
  display: block;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--color-gray-700);
  margin-bottom: var(--space-1);
}

.input-container {
  position: relative;
  display: flex;
  align-items: center;
  background-color: var(--color-white);
  border: 1rpx solid var(--color-gray-300);
  border-radius: var(--radius-md);
  padding: 0 var(--space-3);
  transition: all var(--transition-normal);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.03);
}

.input-container:focus-within {
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3rpx var(--color-primary-light);
}

.input {
  flex: 1;
  height: 84rpx;
  font-size: var(--font-size-base);
  color: var(--color-gray-800);
  padding: 0 var(--space-2);
  background-color: transparent;
  border: none;
  outline: none;
  font-family: var(--font-family);
}

.input::placeholder {
  color: var(--color-gray-400);
}

.input-icon {
  font-size: var(--font-size-lg);
  color: var(--color-gray-500);
}

.input-icon.prefix {
  margin-right: var(--space-2);
}

.input-icon.suffix {
  margin-left: var(--space-2);
}

.input-clear {
  position: absolute;
  right: var(--space-3);
  font-size: var(--font-size-lg);
  color: var(--color-gray-500);
  background-color: var(--color-gray-100);
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

/* 输入框尺寸 */
.input-wrapper.large .input {
  height: 100rpx;
  font-size: var(--font-size-lg);
}

.input-wrapper.small .input {
  height: 68rpx;
  font-size: var(--font-size-sm);
}

/* 输入框类型 */
.input-wrapper.password {
  /* 密码类型特殊样式 */
}

/* 禁用状态 */
.input-wrapper.disabled .input-container {
  background-color: var(--color-gray-50);
  border-color: var(--color-gray-200);
}

.input-wrapper.disabled .input {
  color: var(--color-gray-500);
  cursor: not-allowed;
}

/* 错误状态 */
.input-wrapper.error .input-container {
  border-color: var(--color-error);
}

.input-wrapper.error .input-container:focus-within {
  box-shadow: 0 0 0 3rpx rgba(239, 68, 68, 0.2);
}

.error-message {
  display: block;
  font-size: var(--font-size-xs);
  color: var(--color-error);
  margin-top: var(--space-1);
}